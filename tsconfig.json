{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "noImplicitAny": true,
    "strictNullChecks": true,
  },
  "include": ["typings/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "node_modules/@types/**/*.d.ts"],
  "exclude": ["dist", "node_modules/"],
}
